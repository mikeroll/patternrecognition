builddir = build
cxx = clang++ -fcolor-diagnostics
cflags = -g -Wall
libs = -lSDL2 -lm

rule cxx
  command = $cxx -c $in -o $out
  description = CXX $out

rule link
  command = $cxx $ldflags -o $out $in $libs
  description = LINK $out

build $builddir/dot_factory.o: cxx src/dot_factory.cpp
build $builddir/dot_factory: link $builddir/dot_factory.o
